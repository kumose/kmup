#!/bin/bash

###############################################################
# This script sets defaults for kmup to run in the container #
###############################################################

# It assumes that you place this script as kmup in /usr/local/bin
#
# And place the original in /usr/lib/kmup with working files in /data/kmup
KMUP="/app/kumose/kmup"
WORK_DIR="/var/lib/kmup"
APP_INI="/etc/kmup/app.ini"

APP_INI_SET=""
for i in "$@"; do
	case "$i" in
	"-c")
		APP_INI_SET=1
		;;
	"-c="*)
		APP_INI_SET=1
		;;
	"--config")
		APP_INI_SET=1
		;;
	"--config="*)
		APP_INI_SET=1
		;;
	*)
	;;
	esac
done

if [ -z "$APP_INI_SET" ]; then
	CONF_ARG=("-c" "${KMUP_APP_INI:-$APP_INI}")
fi


# Provide docker defaults
KMUP_WORK_DIR="${KMUP_WORK_DIR:-$WORK_DIR}" exec -a "$0" "$KMUP" "${CONF_ARG[@]}" "$@"
